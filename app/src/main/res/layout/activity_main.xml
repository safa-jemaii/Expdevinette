<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:text="Deviner le Nombre estimer"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/purple_200"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:id="@+id/nbclicks"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal|clip_vertical"

        />
    <Button
        android:id="@+id/demarrer"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|clip_vertical"
android:backgroundTint="@color/purple_200"
        android:text="Demarrer la partie"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="45dp"
        android:id="@+id/res"

        />
    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="            Saisir votre nombre"

        android:textSize="25dp"
        android:id="@+id/saisir"
        android:inputType="number"

        />
    <ImageButton
        android:id="@+id/verifier"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_check_24"
        android:backgroundTint="@color/purple_200"


        />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="45dp"
        android:id="@+id/nbr"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="45dp"
        android:id="@+id/nbr2"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="horizontal">


    <ImageButton
        android:id="@+id/suivant"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/purple_200"
        android:src="@drawable/ic_baseline_arrow_forward_24"



        />
    </LinearLayout>

</LinearLayout>